@model IEnumerable<PizzaPalace.Models.Order>

<table class="table table-hover" id="orders">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PizzaQuantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PizzaSize)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Toppings)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subtotal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tax)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalPrice)
            </th>
            <th><a onclick="showInPopup('@Url.Action("Create", "Orders", null, Context.Request.Scheme)','New Order')" class="btn btn-success text-white">New Order</a></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PizzaQuantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PizzaSize)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Toppings)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Subtotal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tax)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalPrice)
            </td>
            <td>
                <a onclick="showInPopup('@Url.Action("Create", "Orders", new { id = item.OrderId }, Context.Request.Scheme)','Update Order')" class="btn btn-info text-white">Edit Order</a> |
                <form asp-action="Delete" asp-route-id="@item.OrderId" onsubmit="return jQueryAjaxDelete(this);" class="d-inline">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </form>
            </td>
        </tr>
        }
    </tbody>
</table>
